<!-- res/drawable/circle_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/upper_buttons.pressed" />
            <size
                android:width="@dimen/_100sdp"
                android:height="@dimen/_100sdp"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/upper_buttons" />
            <size
                android:width="@dimen/_42sdp"
                android:height="@dimen/_42sdp"/>
        </shape>
    </item>
</selector>
