<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/_7sdp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_120sdp"
        android:gravity="end"
        android:maxLength="12"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:textColor="@color/white"
        android:textColorHighlight="#65FFAA00"
        android:textIsSelectable="true"
        android:textSize="@dimen/_35ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/_0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no0_btn"
        style="@style/Buttons_Style.number0"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="@string/_0"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no1_btn"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dot_btn"
        style="@style/Buttons_Style.numbers"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="@string/dot"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/no0_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/equal_btn"
        style="@style/Buttons_Style.right"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:text="@string/equal"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/dot_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reminder_btn"
        style="@style/Buttons_Style.right"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:text="@string/reminder"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/no3_btn" />

    <ImageButton
        android:id="@+id/backspce_btn"
        style="@style/Buttons_Style.right"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"

        android:gravity="center"
        android:src="@drawable/baseline_arrow_back_space"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/no6_btn"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no4_btn"
        style="@style/Buttons_Style.numbers"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="@string/_4"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no7_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no5_btn"
        style="@style/Buttons_Style.numbers"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="@string/_5"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/no4_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no6_btn"
        style="@style/Buttons_Style.numbers"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="@string/_6"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/no5_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no7_btn"
        style="@style/Buttons_Style.numbers"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="@string/_7"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plus_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/c_btn"
        style="@style/Buttons_Style.right"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:text="@string/c"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/no9_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no9_btn"
        style="@style/Buttons_Style.numbers"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="@string/_9"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"

        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/no8_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no8_btn"
        style="@style/Buttons_Style.numbers"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="@string/_8"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/no7_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no1_btn"
        style="@style/Buttons_Style.numbers"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="@string/_1"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no4_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no3_btn"
        style="@style/Buttons_Style.numbers"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"

        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="@string/_3"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/no2_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plus_btn"
        style="@style/Buttons_Style.operations"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:text="@string/plus"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_tv"
        tools:ignore="TextContrastCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/divided_btn"
        style="@style/Buttons_Style.operations"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:text="@string/divided"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/plus_btn"
        tools:ignore="TextContrastCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/multi_btn"
        style="@style/Buttons_Style.operations"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:text="@string/multiplication"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/plus_btn"
        tools:ignore="TextContrastCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/minus_btn"
        style="@style/Buttons_Style.operations"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:text="@string/minus"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/plus_btn"
        tools:ignore="TextContrastCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/no2_btn"
        style="@style/Buttons_Style.numbers"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center"
        android:onClick="onClickNumber"
        android:text="@string/_2"
        android:textSize="@dimen/_18ssp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/no1_btn" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>